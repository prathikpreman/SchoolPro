<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="match_parent"
        tools:context=".TwoWayAuthentication">

    <TextView android:layout_width="match_parent"
              android:layout_margin="20dp"
              android:text="@string/autheticator_text"
              android:layout_height="wrap_content"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_gravity="center"
                  android:gravity="center"
                  android:layout_marginTop="10dp"
                  android:layout_height="wrap_content">

        <ImageView android:layout_width="200dp"
                   android:background="#ccc"
                   android:id="@+id/qrCodeView"
                   android:layout_height="200dp"/>

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_gravity="center"
                  android:layout_marginTop="30dp"
                  android:gravity="center"
                  android:layout_height="wrap_content">

        <TextView android:layout_width="wrap_content"
                  android:id="@+id/qrKeyTextView"
                  android:text="S2QUQTLL4FFY6QLZQCV245XILSLZ47VR"
                  android:layout_height="wrap_content"/>


        <ImageView android:layout_width="20dp"
                   android:id="@+id/copyBtn"
                   android:layout_marginLeft="10dp"
                   android:src="@drawable/ic_copy"
                   android:layout_height="20dp"/>



    </LinearLayout>

    <android.support.v7.widget.AppCompatCheckBox android:layout_width="wrap_content"
                                                 android:layout_marginTop="20dp"
                                                 android:id="@+id/twostepCheckbox"
                                                 android:text="Enable Two Step Authentication"
                                                 android:layout_height="wrap_content"/>


</LinearLayout>