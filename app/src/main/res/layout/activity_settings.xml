<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        tools:context=".Settings">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_gravity="center"
                  android:id="@+id/twoStepBtn"
                  android:paddingLeft="20dp"
                  android:background="@drawable/ripple_effect"
                  android:clickable="true"
                  android:focusable="true"
                  android:gravity="center"
                  android:layout_height="50dp">
        <ImageView android:layout_width="20dp"
                   android:src="@drawable/ic_lock"
                   android:layout_height="20dp"/>

        <TextView android:layout_width="match_parent"
                  android:text="Two Step Authentication"
                  android:layout_gravity="center"
                  android:layout_marginLeft="20dp"
                  android:gravity="center|left"
                  android:layout_height="match_parent"/>
    </LinearLayout>
    <TextView android:layout_width="match_parent"
              android:background="#BEBEBE"
              android:layout_height="1dp"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_gravity="center"
                  android:paddingLeft="20dp"
                  android:background="@drawable/ripple_effect"
                  android:clickable="true"
                  android:focusable="true"
                  android:id="@+id/keyLockSetting"
                  android:gravity="center"
                  android:layout_height="50dp">
        <ImageView android:layout_width="20dp"
                   android:tint="#364A5C"
                   android:src="@drawable/ic_lock_keypad"
                   android:layout_height="20dp"/>

        <TextView android:layout_width="match_parent"
                  android:text="Key Lock"
                  android:layout_gravity="center"
                  android:layout_marginLeft="20dp"
                  android:gravity="center|left"
                  android:layout_height="match_parent"/>
    </LinearLayout>
    <TextView android:layout_width="match_parent"
              android:background="#BEBEBE"
              android:layout_height="1dp"/>

    <LinearLayout android:layout_width="match_parent"
                  android:id="@+id/btn_fingerPrint"
                  android:layout_gravity="center"
                  android:paddingLeft="20dp"
                  android:gravity="center"
                  android:layout_height="50dp">
        <ImageView android:layout_width="20dp"
                   android:src="@drawable/ic_fingerprint"
                   android:layout_height="20dp"/>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_marginLeft="20dp"
                      android:layout_height="wrap_content">

            <LinearLayout android:layout_width="0dp"
                          android:layout_weight="3" android:layout_height="match_parent">

                <TextView android:layout_width="match_parent"
                          android:text="Enable Finger Print"
                          android:layout_gravity="center"
                          android:gravity="center|left"
                          android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout android:layout_width="0dp"
                          android:layout_gravity="center"
                          android:gravity="center"
                          android:layout_weight="1" android:layout_height="match_parent">
                <android.support.v7.widget.SwitchCompat android:layout_width="wrap_content"
                                                        android:id="@+id/fingerPrintSwitch"
                                                        android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <TextView android:layout_width="match_parent"
              android:background="#BEBEBE"
              android:layout_height="1dp"/>

</LinearLayout>