<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_gravity="center"
              android:gravity="center"
              android:layout_height="match_parent">

    <android.support.v7.widget.CardView android:layout_width="match_parent"
                                        android:layout_margin="30dp"
                                        app:cardCornerRadius="20dp"
                                        android:background="#ccc"
                                        app:cardBackgroundColor="#ccc"
                                        android:layout_height="200dp">

        <FrameLayout android:layout_width="match_parent"
                     android:layout_height="match_parent">

            <ImageView android:layout_width="match_parent"
                       android:id="@+id/cardSkinLayout"
                       android:background="@drawable/green_bg"
                       android:layout_height="match_parent"/>

            <TextView android:layout_width="match_parent"
                      android:background="#66000000"
                      android:layout_height="match_parent"/>


            <LinearLayout android:layout_width="match_parent"
                          android:orientation="vertical"
                          android:layout_height="match_parent">

            <LinearLayout android:layout_width="match_parent"
                          android:layout_weight="1"
                          android:layout_gravity="left"
                          android:gravity="left"
                          android:paddingLeft="20dp"
                          android:orientation="horizontal"
                          android:layout_height="0dp">


                <LinearLayout android:layout_width="0dp"
                              android:layout_weight="1"
                              android:layout_height="match_parent">
                    <ImageView android:layout_width="100dp"
                               android:src="@drawable/federalbank"
                               android:id="@+id/bankLogo"
                               android:visibility="gone"
                               android:layout_gravity="left"
                               android:layout_height="wrap_content"/>

                    <TextView android:layout_width="wrap_content"
                              android:text="Other Bank"
                              android:layout_gravity="center|left"
                              android:gravity="center|left"
                              android:id="@+id/otherBankName"
                              android:textColor="@color/colorWhite"
                              android:background="#A4000000"
                              android:paddingRight="10dp"
                              android:paddingLeft="10dp"
                              android:textStyle="bold"
                              android:textAllCaps="true"
                              android:layout_height="wrap_content"/>

                </LinearLayout>

               <LinearLayout android:layout_width="0dp"
                              android:layout_weight="1"
                             android:paddingRight="20dp"
                              android:layout_height="match_parent">

                    <TextView android:layout_width="match_parent"
                              android:text="DEBIT CARD"
                              android:layout_gravity="center|right"
                              android:gravity="center|right"
                              android:textSize="10sp"
                              android:textColor="@color/colorWhite"
                              android:textStyle="italic"
                              android:layout_height="match_parent"/>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_weight="0.5"
                          android:layout_height="0dp">
            </LinearLayout>

                <LinearLayout android:layout_width="match_parent"
                              android:layout_weight="1"
                              android:layout_gravity="center"
                              android:gravity="center"
                              android:orientation="vertical"
                              android:layout_height="0dp">


                    <TextView android:layout_width="match_parent"
                              android:text="4256 1485 3658 4125"
                              android:layout_gravity="center"
                              android:gravity="center"
                              android:textSize="12sp"
                              android:id="@+id/raw_cardNumber"
                              android:letterSpacing="0.3"
                              android:fontFamily="@font/cardfont"
                              android:textColor="#fff"
                              android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout android:layout_width="match_parent"
                              android:layout_weight="0.5"
                              android:orientation="horizontal"
                              android:layout_height="0dp">

                    <TextView android:layout_width="wrap_content"
                              android:text="Valid Thru"
                              android:textAllCaps="true"
                              android:layout_gravity="left|center"
                              android:gravity="center"
                              android:textSize="8sp"
                              android:layout_marginLeft="30dp"
                              android:textColor="#fff"
                              android:layout_height="wrap_content"/>

                    <TextView android:layout_width="match_parent"
                              android:text="00/0000"
                              android:textAllCaps="true"
                              android:layout_gravity="left|center"
                              android:gravity="left|center"
                              android:textSize="8sp"
                              android:id="@+id/raw_Expiry"
                              android:layout_marginLeft="8dp"
                              android:fontFamily="@font/cardfont"
                              android:textColor="#fff"
                              android:layout_height="wrap_content"/>
                </LinearLayout>


                <LinearLayout android:layout_width="match_parent"
                              android:layout_weight="1"
                              android:layout_height="0dp">

                    <LinearLayout android:layout_width="0dp"
                                  android:layout_weight="2"
                                  android:layout_height="match_parent">

                        <TextView android:layout_width="match_parent"
                                  android:text="Prathik Preman"
                                  android:textAllCaps="true"
                                  android:layout_gravity="left|center"
                                  android:gravity="left|center"
                                  android:textSize="12sp"
                                  android:id="@+id/raw_cardName"
                                  android:layout_marginLeft="30dp"
                                  android:fontFamily="@font/cardfont"
                                  android:textColor="#fff"
                                  android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout android:layout_width="0dp"
                                  android:layout_weight="1"
                                  android:layout_gravity="center"
                                  android:gravity="center"
                                  android:layout_height="match_parent">

                        <ImageView android:layout_width="wrap_content"
                                   android:src="@drawable/ic_visa"
                                   android:id="@+id/cardIcon"
                                   android:layout_gravity="bottom|right"
                                   android:layout_height="wrap_content"/>

                    </LinearLayout>



                </LinearLayout>





            </LinearLayout>

        </FrameLayout>



    </android.support.v7.widget.CardView>
</LinearLayout>
